<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	   <extension
	         point="org.eclipse.ui.views">
	      <category
	            name="SimuBench Category"
	            id="de.uka.ipd.sdq.codegen.simudatavisualization">
	      </category>
	      <view
	            name="Experiments View"
	            icon="icons/app_simucim.gif"
	            category="de.uka.ipd.sdq.codegen.simudatavisualization"
	            class="de.uka.ipd.sdq.codegen.simudatavisualization.views.ExperimentsView"
	            id="de.uka.ipd.sdq.codegen.simudatavisualization.ExperimentsView">
	      </view>
	      <view
	            category="de.uka.ipd.sdq.codegen.simudatavisualization"
	            class="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView"
	            icon="icons/app_simucim.gif"
	            id="de.uka.ipd.sdq.codegen.simudatavisualization.ReportView"
	            name="Report View"/>
	   </extension>
		   <extension
		         point="org.eclipse.ui.perspectives">
		     	 <perspective
		            class="de.uka.ipd.sdq.codegen.simudatavisualization.perspective.SimuBenchPerspective"
		            fixed="false"
		            icon="icons/app_simucim.gif"
		            id="de.uka.ipd.sdq.codegen.simudatavisualization.SimuBenchPerspective"
		            name="SimuBench"/>
		   </extension>
	    <extension
	          point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
	       <propertyContributor
	             contributorId="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView"
	             typeMapper="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.PropertyTypeMapper">
		       		<propertyCategory category="sensors"/>
		         	<propertyCategory category="configuration"/>
	       </propertyContributor>
	    </extension>
	    
	    <extension
	          point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
	       <propertyTabs 
	       		contributorId="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView">
	       		<propertyTab
	            	category="sensors"
	               	id="SensorsTab"
	            	label="Sensors"/>
	        	<propertyTab
	                afterTab="SensorsTab"
	                category="sensors"
	                id="ConfTab"
	                label="Configuration"/>
	       </propertyTabs>
	   </extension>
	   <extension
	          point="org.eclipse.ui.views.properties.tabbed.propertySections">
	       <propertySections contributorId="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView">
	          <propertySection
                 class="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.SensorsPropertySection"
                 filter="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.TabFilter"
                 id="SensorsSection"
                 tab="SensorsTab">
           </propertySection>
	          <propertySection
	                class="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.ConfPropertySection"
	                filter="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.TabFilter"
	                id="ConfSection"
	                tab="ConfTab">
	         </propertySection>
	      </propertySections>
	   </extension>
      <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="SimuBench Action Set"
            visible="true"
            id="actions.actionSet">
         <menu
               label="SimuBench"
               id="simuBenchMenu">
            <separator
                  name="simuBenchGroup">
            </separator>
         </menu>
         <action
               label="&amp;Create New Chart"
               icon="icons/new_chart.gif"
               class="de.uka.ipd.sdq.codegen.simudatavisualization.actions.CreateChartAction"
               tooltip="Create new chart"
               menubarPath="simuBenchMenu/simuBenchGroup"
               toolbarPath="sampleGroup"
               id="actions.createNewChartAction">
         </action>
      </actionSet>
   </extension>
      <extension
            point="org.eclipse.ui.dropActions">
         <action
               class="de.uka.ipd.sdq.codegen.simudatavisualization.tabs.DropAdapter"
               id="de.uka.ipd.sdq.codegen.simudatavisualization.Drop">
         </action>
      </extension>
      <extension
            point="org.eclipse.ui.editors">
         <editor
               class="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView"
               icon="icons/new_chart.gif"
               id="de.uka.ipd.sdq.codegen.simudatavisualization.views.ReportView"
               name="Report Editor">
         </editor>
         <editor
               class="de.uka.ipd.sdq.codegen.simudatavisualization.views.JFreeChartPieReport"
               icon="icons/new_chart.gif"
               id="de.uka.ipd.sdq.codegen.simudatavisualization.views.JFreeChartPieReport"
               name="JFreeChart Pie Viewer">
         </editor>
      </extension>
</plugin>
