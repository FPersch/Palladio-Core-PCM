		    	defaultexcludes="yes" 
		    	use="true" 
		    	version="true" 
		    	windowtitle="Palladio Component Model - PCM"
		    	maxmemory="256m">

		        <doctitle><![CDATA[<h1>${project.name}</h1]]></doctitle>
		        <link href="http://java.sun.com/javase/6/docs/api/"/>
		    	<!-- <fileset dir="/home/ccontrol/pluginbuilder/de.uka.ipd.sdq.pluginbuilder.3.5/plugins/" includes="**/*.java"/> -->
