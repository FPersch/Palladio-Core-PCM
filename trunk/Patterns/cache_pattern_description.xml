<?xml version="1.0" encoding="UTF-8"?>
<pattern xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="pattern_description.xsd">
	<name>Cache</name>
	<interfaceModel>Quality</interfaceModel>
	<mismatches>
		<attribute name="Performance" suitability="+">
			<subAttribute name="Throughput"  suitability="+"/>
		</attribute>
		<attribute name="Reliability">
			<subAttribute name="NumberOfFailures"  suitability="-"/>
		</attribute>
		<attribute name ="Security" suitability="o"/>
	</mismatches>
	<description>The Caching pattern describes how to avoid expensive reacquisition of resources by not releasing the resources immediately after their use.</description>
	<source>Kircher/Jain: Pattern Oriented Software Architecture</source>
	<adaptorTemplates>
		<template>CacheAdaptor.cst</template>
		<template>CacheAdaptorUnitTests.cst</template>
	</adaptorTemplates>
	<predictionModels>
		<predictionModel name="Palladio">
			<usageInstructions>Execute with Palladio_Performance_Prediction_xml.</usageInstructions>
			<template>SEA_CacheAdaptor.cst</template>
		</predictionModel>
		<predictionModel name="CacheSimulation">
			<usageInstructions>Call command line tool with the number of calls that shall be simulated.</usageInstructions>
			<template>CacheSimulation.cst</template>
		</predictionModel>
	</predictionModels>
</pattern>
