<%@ CodeTemplate Language="C#" TargetLanguage="HTML" Description="Generates a set of HTML-based database documentation." %>
<%@ Property Name="SourceDatabase" Type="SchemaExplorer.DatabaseSchema" Category="Context" Description="Database that the documentation should be based on." %>
<%@ Property Name="ServerName" Type="System.String" Category="Output" Description="The name of the actual database server that is being documented." %>
<%@ Property Name="DocumentationTitle" Type="System.String" Default="Database Documentation" Category="Output" Description="Defines what the title of the HTML page that will be generated will be." %>
<%@ Assembly Name="SchemaExplorer" %>
<%@ Assembly Name="System.Design" %>
<%@ Import Namespace="SchemaExplorer" %>
<script runat="template">


private CodeTemplate _viewTextTemplate;
private CodeTemplate _viewDetailsTemplate;
private CodeTemplate _viewSummaryTemplate;
private string _outputDirectory = String.Empty; 


[Editor(typeof(System.Windows.Forms.Design.FolderNameEditor), typeof(System.Drawing.Design.UITypeEditor))] 
[CodeTemplateProperty(CodeTemplatePropertyOption.Optional)]
[Category("Output")]
[Description("The directory to output the results to.")]
public string OutputDirectory 
{ 
	get
	{
		if (_outputDirectory.Length == 0) return this.CodeTemplateInfo.DirectoryName + "output";
		return _outputDirectory;
	}
	set
	{
		if (value.EndsWith("\\")) value = value.Substring(0, value.Length - 1);
		_outputDirectory = value;
	} 
}


[Browsable(false)]
public CodeTemplate ViewTextTemplate
{
	get
	{
		if (_viewTextTemplate == null) 
		{
			CodeTemplateCompiler compiler = new CodeTemplateCompiler(this.CodeTemplateInfo.DirectoryName + "view_text.cst");
			compiler.Compile();
			
			if (compiler.Errors.Count == 0)
			{
				_viewTextTemplate = compiler.CreateInstance();
			}
			else
			{
				for (int i = 0; i < compiler.Errors.Count; i++)
				{
					Response.WriteLine(compiler.Errors[i].ToString());
				}
			}
		}
		
		return _viewTextTemplate;
	}
}


[Browsable(false)]
public CodeTemplate ViewDetailsTemplate
{
	get
	{
		if (_viewDetailsTemplate == null) 
		{
			CodeTemplateCompiler compiler = new CodeTemplateCompiler(this.CodeTemplateInfo.DirectoryName + "view_details.cst");
			compiler.Compile();
			
			if (compiler.Errors.Count == 0)
			{
				_viewDetailsTemplate = compiler.CreateInstance();
			}
			else
			{
				for (int i = 0; i < compiler.Errors.Count; i++)
				{
					Response.WriteLine(compiler.Errors[i].ToString());
				}
			}
		}
		
		return _viewDetailsTemplate;
	}
}


[Browsable(false)]
public CodeTemplate ViewSummaryTemplate
{
	get
	{
		if (_viewSummaryTemplate == null) 
		{
			CodeTemplateCompiler compiler = new CodeTemplateCompiler(this.CodeTemplateInfo.DirectoryName + "view_summary.cst");
			compiler.Compile();
			
			if (compiler.Errors.Count == 0)
			{
				_viewSummaryTemplate = compiler.CreateInstance();
			}
			else
			{
				for (int i = 0; i < compiler.Errors.Count; i++)
				{
					Response.WriteLine(compiler.Errors[i].ToString());
				}
			}
		}
		
		return _viewSummaryTemplate;
	}
}


public void Go()
{
	this.GenerateViewTextHTML(SourceDatabase);
	this.GenerateViewDetailsHTML(SourceDatabase);
	this.GenerateViewSummaryHTML(SourceDatabase);
}


public void GenerateViewTextHTML(DatabaseSchema database)
{
	ViewSchemaCollection views = new ViewSchemaCollection(database.Views);
	

	views.Sort(new PropertyComparer("FullName"));

	for (int i = 0; i < views.Count; i++)
	{
		ViewTextTemplate.SetProperty("SourceView", views[i]);
		ViewTextTemplate.SetProperty("ViewIndex", i);
		
		ViewTextTemplate.RenderToFile(OutputDirectory + "\\view_" + i + ".html", true);
	}
	
}


public void GenerateViewDetailsHTML(DatabaseSchema database)
{
	ViewSchemaCollection views = new ViewSchemaCollection(database.Views);
	

	views.Sort(new PropertyComparer("FullName"));

	for (int i = 0; i < views.Count; i++)
	{
		ViewDetailsTemplate.SetProperty("SourceView", views[i]);
		ViewDetailsTemplate.SetProperty("ViewIndex", i);
		
		ViewDetailsTemplate.RenderToFile(OutputDirectory + "\\view_details_" + i + ".html", true);
	}
	
}


public void GenerateViewSummaryHTML(DatabaseSchema database)
{
	ViewSummaryTemplate.SetProperty("SourceDatabase", SourceDatabase);
	
	ViewSummaryTemplate.RenderToFile(OutputDirectory + "\\view_summary.html", true);
}


</script>
<%

this.Go();

%>
<html>
<head>
	<title><%= DocumentationTitle %></title>
<link href="dbdocs.css" type="text/css" rel="stylesheet" />	
</head>
<body>
